! Goldie Lin`s ~/.Xdefaults for urxvt (rxvt-unicode)
!   After modified, use `xrdb -merge ~/.Xdefaults`
!   to reload setting, and then restart urxvt.
! Required packages: (via `sudo apt-get install ...`)
!   Fonts:
!     xfonts-wqy xfonts-terminus xfonts-terminus-oblique
!   For urxvt/perl/clipboard:
!     xsel xclip

! DO NOT uncomment this line, or it will result in unusable terminal.
! https://bbs.archlinux.org/viewtopic.php?id=70070
!URxvt.borderLess: false

! URXVT options:
URxvt.geometry: 86x28
URxvt.scrollstyle:        next
!URxvt.scrollBar:          true
!URxvt.scrollBar_right:    true
!URxvt.scrollBar_floating: false
!URxvt.scrollBar_align:    centre
URxvt.scrollTtyOutput:   false
URxvt.scrollWithBuffer:  true
URxvt.scrollTtyKeypress: false
URxvt.saveLines:         10000
!URxvt.visualBell:  true
URxvt.cursorBlink: true
!URxvt.termName:   rxvt-unicode

! Multichar encoding:
!URxvt.multichar_encoding:big5

! URXVT font settings:
! List X11 core fonts:
!   `xlsfonts`
!   `cat /usr/share/fonts/X11/misc/fonts.alias`
! Terminus-12 + ArphicUming-8 (no bold fontstyle)
!URxvt.font:     -*-terminus-medium-r-*-*-12-*-*-*-*-*-*-*, xft:AR PL UMing TW:size=8:antialias=false:hinting=false:autohint=false
!URxvt.boldFont: -*-terminus-bold-r-*-*-12-*-*-*-*-*-*-*,   xft:AR PL UMing TW:size=8:antialias=false:hinting=false:autohint=false:bold
! Terminus-14 + ArphicUming-12
URxvt.font:     -*-terminus-medium-r-*-*-14-*-*-*-*-*-*-*, xft:AR PL UMing TW:size=12:antialias=false:hinting=false:autohint=false
URxvt.boldFont: -*-terminus-bold-r-*-*-14-*-*-*-*-*-*-*,   xft:AR PL UMing TW:size=12:antialias=false:hinting=false:autohint=false:bold
! Terminus-16 + ArphicUming-13
!URxvt.font:     -*-terminus-medium-r-*-*-16-*-*-*-*-*-*-*, xft:AR PL UMing TW:size=13:antialias=false:hinting=false:autohint=false
!URxvt.boldFont: -*-terminus-bold-r-*-*-16-*-*-*-*-*-*-*,   xft:AR PL UMing TW:size=13:antialias=false:hinting=false:autohint=false:bold

! Color defines:
! Black
URxvt.color0:  #000000
URxvt.color8:  #555753
! Red
URxvt.color1:  #CC0000
URxvt.color9:  #EF2929
! Green
URxvt.color2:  #4E9A06
URxvt.color10: #7AE234
! Yellow
URxvt.color3:  #C4A000
URxvt.color11: #FCE94F
! Blue
URxvt.color4:  #3465A4
URxvt.color12: #729FCF
! Magenta
URxvt.color5:  #75507B
URxvt.color13: #AD7FA8
! Cyan
URxvt.color6:  #06989A
URxvt.color14: #34E2E2
! White
URxvt.color7:  #D3D7CF
URxvt.color15: #ECEDEE

! Color settings:
URxvt.background:   #000000
URxvt.foreground:   #AAAAAA
URxvt.colorBD:      #FFFF00
URxvt.colorIT:      #FF00FF
URxvt.colorUL:      #3465A4
URxvt.cursorColor:  #EE8888
URxvt.cursorColor2: Gray25

! Transparent:
!URxvt.transparent: true
! 0 to 99 darkens, 101 to 200 lightens
!URxvt.shading:     10
! Avoid using shading if you have tintColor set.
!URxvt.tintColor:   Blue3

! List what urxvt perl extensions enabled by default:
!   `man urxvt-extensions | grep 'enabled by default'`

! Enable and config urxvt perl extensions.
! matcher:
!   Clickable URLs.
! tabbed:
!   Shift + DownArrow  : Create a new tab.
!   Shift + Left/Right : Switch between tabs.
!   Ctrl  + Left/Right : Move tab to left/right.
!   Ctrl  + D          : Close tab.
URxvt.perl-lib:        /home/goldie/.urxvt
URxvt.perl-ext-common: default,matcher,tabbed,clipboard,selection-autotransform,confirm-paste
! selection:
URxvt.selection.pattern-0: ([^:$#[:space:]]+)
URxvt.selection.pattern-1: (^[^:[:space:]]+:\\d+:)
!URxvt.selection.pattern-2: ([^&()*,;<=>?@[\\\\]^`{|})]+)
! Set URL open by urlLauncher via left mouse button (1), or middle mouse button (2):
URxvt.urlLauncher:    x-www-browser
URxvt.matcher.button: 2
! tabbed:
URxvt.tabbed.tabbar-fg: 8
URxvt.tabbed.tabbar-bg: 7
URxvt.tabbed.tab-fg:    15
URxvt.tabbed.tab-bg:    12
! Clipboard: (M=Alt, C=Ctrl, S=Shift)
URxvt.keysym.M-c:   perl:clipboard:copy
URxvt.keysym.M-v:   perl:clipboard:paste
URxvt.keysym.M-C-v: perl:clipboard:paste_escaped
! selection-autotransform:
URxvt.selection-autotransform.0: s/^([^:[:space:]]+):(\\d+):?$/vi +$2 \\Q$1\\E\\x0d/
URxvt.selection-autotransform.1: s/^([^:[:space:]]+):(\\d+):?$/:e \\Q$1\\E\\x0d:$2\\x0d/
