[delta]
	syntax-theme = Monokai Extended Bright
	features = unobtrusive-line-numbers decorations
	#side-by-side = true
	relative-paths = true
	hyperlinks-file-link-format = "file://{path}:{line}"
[delta "unobtrusive-line-numbers"]
	line-numbers = true
	line-numbers-minus-style  = "#444444"
	line-numbers-zero-style   = "#444444"
	line-numbers-plus-style   = "#444444"
	line-numbers-left-format  = "{nm:>4}┊"
	line-numbers-right-format = "{np:>4}│"
	line-numbers-left-style   = blue
	line-numbers-right-style  = blue
	hunk-header-line-number-style = hidden
[delta "decorations"]
	hunk-header-style             = file line-number syntax
	hunk-header-file-style        = blue
	hunk-header-line-number-style = green
	hunk-header-decoration-style  = blue box
	minus-style                   = syntax "#3f0001"
	minus-non-emph-style          = syntax "#3f0001"
	minus-emph-style              = syntax "#901011" bold strike
	minus-empty-line-marker-style = normal "#3f0001"
	plus-style                    = syntax "#003800"
	plus-non-emph-style           = syntax "#003800"
	plus-emph-style               = syntax "#007800" bold
	plus-empty-line-marker-style  = normal "#003800"
	zero-style                    = syntax
	file-style                    = "#005efe"
	file-decoration-style         = "#005efe" bold ol
	commit-style                  = raw
	#commit-decoration-style       = "#ff8700" bold box ul
	whitespace-error-style        = "#ff0055" reverse
[core]
	editor = nvim
	untrackedCache = true
	deltaBaseCacheLimit = 1g
	compression = 9
	looseCompression = 1
	pager = delta
[interactive]
	diffFilter = delta --color-only
[pager]
	# "true" means use what defined by "core.pager".
	#add = true  # will break `git add -p`, use "interactive.diffFilter" instead.
	log = true
	show = true
	diff = true
	status = true
	range-diff = true
[protocol]
	version = 2
[pack]
	#compression = 9
	windowMemory = 32m
	threads = 0
[init]
	defaultBranch = main
[commit]
	verbose = true
[diff]
	tool = vimdiff3
	renameLimit = 0
	renames = copies
	submodule = diff
	algorithm = histogram
	compactionHeuristic = false
	indentHeuristic = true
	colorMoved = default
[difftool "vimdiff3"]
	path = nvim
[merge]
	tool = vimdiff3
[mergetool "vimdiff3"]
	path = nvim
[rebase]
	autoSquash = true
	autoStash = true
	abbreviateCommands = true
	missingCommitsCheck = warn
	instructionFormat = [%ai] <%ae> %s
[stash]
	showStat = true
	showPatch = true
[log]
	follow = true
	date = format:%Y-%m-%d %H:%M:%S %z
	decorate = short
	showSignature = true
[grep]
	lineNumber = true
	column = false
[blame]
	date = format:%Y-%m-%d %H:%M:%S %z
	showEmail = true
	coloring = highlightRecent
[pull]
	rebase = false
[push]
	default = simple
[branch]
