[core]
	editor = nvim
	untrackedCache = true
	deltaBaseCacheLimit = 1g
	compression = 9
	looseCompression = 1
	pager = delta --highlight-removed --dark --theme='Monokai Extended Bright' --minus-color="#3f0001" --minus-emph-color="#901011" --plus-color="#003800" --plus-emph-color="#007800" --commit-color="#ff8700" --file-color="#1e9c1e" --hunk-color="#005eee"
[interactive]
	diffFilter = delta --color-only --highlight-removed --dark --theme='Monokai Extended Bright' --minus-color="#3f0001" --minus-emph-color="#901011" --plus-color="#003800" --plus-emph-color="#007800" --commit-color="#ff8700" --file-color="#1e9c1e" --hunk-color="#005eee"
