	context = normal
	meta = bold
	frag = cyan
	func = cyan bold
	old = red
	new = green
	commit = yellow
	whitespace = red reverse
	oldMoved = magenta bold
	oldMovedAlternative = blue bold
	oldMovedDimmed = dim
	oldMovedAlternativeDimmed = dim italic
	newMoved = cyan bold
	newMovedAlternative = yellow bold
	newMovedDimmed = dim
	newMovedAlternativeDimmed = dim italic
	contextDimmed = dim
	oldDimmed = red dim
	newDimmed = green dim
	contextBold = bold
	oldBold = red bold
	newBold = green bold
