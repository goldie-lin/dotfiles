	plain = normal
	current = green
	local = normal
	remote = red
	upstream = blue
[color "diff"]
	context = normal
	meta = bold
	frag = cyan
	func = cyan bold
	old = red
	new = green
	commit = yellow
	whitespace = red reverse
[color "decorate"]
	branch = green bold
	remoteBranch = red bold
	tag = yellow bold
	stash = magenta bold
	HEAD = cyan bold
[color "grep"]
	context = normal
	filename = magenta
	function = cyan bold
	linenumber = green
	match = red bold
	matchContext = red bold
	matchSelected = red bold
	selected = normal
	separator = cyan
[color "interactive"]
	prompt = blue bold
	header = bold
	help = red bold
	error = red reverse
[color "status"]
	header = normal
	branch = green
	nobranch = red
	added = green
	changed = red
	untracked = magenta
	unmerged = red reverse
[core]
	editor = vim
	untrackedCache = true
[diff]
	tool = vimdiff3
	renameLimit = 0
	algorithm = histogram
	renames = copies
	compactionHeuristic = true
[commit]
	verbose = true
[merge]
	tool = vimdiff3
[rebase]
	autoSquash = true
	autoStash = true
[stash]
	showStat = true
	showPatch = true
[interactive]
	diffFilter = diff-highlight
[pager]
	#add = diff-highlight | less -i
	log = diff-highlight | less -i
	show = diff-highlight | less -i
	diff = diff-highlight | less -i
	status = diff-highlight | less -i
[log]
	follow = true
	date = iso
	decorate = short
	showSignature = true
[grep]
	lineNumber = true
[blame]
	showEmail = true
[push]
	default = simple
[pack]
