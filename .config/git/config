[alias]
	st = status
	sti = status --ignored
	stu = status --untracked-files=no
	br = branch
	co = checkout
	ci = commit
	ca = commit -a
	wt = worktree
	unstage = reset HEAD --
	uncommit = reset --soft HEAD^ --
	egrep = grep -E
	fgrep = grep -F
	ggrep = grep
	who = shortlog -n -s --no-merges
	last = log -1 HEAD
	lastpull = log HEAD@{1}..HEAD
	hist  = log --pretty=format:'%C(yellow)%h%C(reset) %C(green)[%ad]%C(reset) %C(bold blue)<%an>%C(reset) %s%C(auto)%d%C(reset)'
