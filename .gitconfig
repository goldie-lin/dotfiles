[color]
	ui = auto
[color "branch"]
	current = green
	local = normal
	remote = red
	upstream = blue
[color "diff"]
	context = normal
	meta = bold
	frag = cyan
	func = cyan bold
	old = red
	new = green
	commit = yellow
	whitespace = red reverse
[color "decorate"]
	branch = green bold
	remoteBranch = red bold
	tag = yellow bold
	stash = magenta bold
	HEAD = cyan bold
[color "grep"]
	context = normal
	filename = magenta
	function = cyan bold
	linenumber = green
	match = red bold
	matchContext = red bold
	matchSelected = red bold
	selected = normal
	separator = cyan
[color "interactive"]
	prompt = blue bold
	header = bold
	help = red bold
	error = red reverse
[color "status"]
	header = normal
	branch = green
	nobranch = red
	added = green
	changed = red
	untracked = magenta
	unmerged = red reverse
[core]
	editor = vim
[diff]
	tool = vimdiff3
	renameLimit = 0
	algorithm = histogram
[merge]
	tool = vimdiff
[rebase]
	autoSquash = true
	autoStash = true
[stash]
	showStat = true
	showPatch = true
[pager]
	log = diff-highlight | less -i
	show = diff-highlight | less -i
	diff = diff-highlight | less -i
	status = diff-highlight | less -i
[log]
	follow = true
	date = iso
[grep]
	lineNumber = true
[blame]
	showEmail = true
[push]
	default = simple
[pack]
	threads = 0
[branch]
	autoSetupRebase = remote
[alias]
	st = status
	sti = status --ignored
	stu = status --untracked-files=no
	br = branch
	co = checkout
	ci = commit
	ca = commit -a
	unstage = reset HEAD --
	uncommit = reset --soft HEAD^ --
	egrep = grep -E
	fgrep = grep -F
	ggrep = grep
	who = shortlog -n -s --no-merges
	last = log -1 HEAD
	hist = log --graph --pretty=format:'%Cred%h%Creset <%Cgreen%ad%Creset> %C(bold blue)[%an]%Creset %s%C(yellow)%d%Creset'
[include]
	path = ~/.gitconfig.local
