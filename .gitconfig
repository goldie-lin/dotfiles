[color]
	ui = auto
[core]
	editor = vim
[diff]
	tool = vimdiff3
	renamelimit = 0
	algorithm = histogram
[merge]
	tool = vimdiff
[pager]
	log = diff-highlight | less -i
	show = diff-highlight | less -i
	diff = diff-highlight | less -i
	status = diff-highlight | less -i
[grep]
	lineNumber = true
[push]
	default = matching
[pack]
	threads = 0
[branch]
	autosetuprebase = remote
[alias]
	st = status
	sti = status --ignored
	stu = status --untracked-files=no
	br = branch
	co = checkout
	ci = commit
	ca = commit -a
	unstage = reset HEAD --
	uncommit = reset --soft HEAD^ --
	egrep = grep -n --color=auto -E
	fgrep = grep -n --color=auto -F
	ggrep = grep -n --color=auto
	who = shortlog -n -s --no-merges
	last = log -1 HEAD
	hist = log --graph --pretty=format:'%Cred%h%Creset <%Cgreen%ai%Creset> %C(bold blue)[%an]%Creset %s%C(yellow)%d%Creset'
[include]
	path = ~/.gitconfig.local
